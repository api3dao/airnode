{
  "name": "airnode",
  "scripts": {
    "bootstrap": "npm install && lerna bootstrap",
    "build": "lerna run build --stream",
    "dev:aws": "(cd packages/node && serverless offline --config serverless.aws.yml)",
    "invoke:aws": "(cd packages/node && serverless invoke local --function start --config serverless.aws.yml)",
    "lint": "npm run lint:eslint && npm run lint:solhint",
    "lint:eslint": "eslint . --ext .js,.ts",
    "lint:solhint": "solhint \"./packages/contracts/src/**/*.sol\"",
    "prettify": "prettier --write ./**/*.{js,ts} --loglevel silent",
    "test": "lerna run test --stream",
    "test:adapter": "(cd packages/adapter && npm run test)",
    "test:watch:adapter": "(cd packages/adapter && npm run test:watch)",
    "test:watch:node": "(cd packages/node && npm run test:watch)"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.12",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "solhint": "^3.0.0",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettify && npm run lint"
    }
  }
}
