{
  "name": "api3",
  "version": "0.1.0",
  "license": "MIT",
  "engines": {
    "node": "^14.17.1"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bootstrap": "yarn install && lerna bootstrap",
    "build": "lerna run build --stream",
    "build:adapter": "(cd packages/adapter && yarn run build)",
    "build:admin": "(cd packages/admin && yarn run build)",
    "build:airnode-abi": "(cd packages/airnode-abi && yarn run build)",
    "build:deployer": "(cd packages/deployer && yarn run build)",
    "build:node": "(cd packages/node && yarn run build)",
    "build:ois": "(cd packages/ois && yarn run build)",
    "build:operation": "(cd packages/operation && yarn run build)",
    "build:protocol": "(cd packages/protocol && yarn run build)",
    "build:validator": "(cd packages/validator && yarn run build)",
    "clean": "lerna run clean --stream",
    "cli:deployer": "lerna run --scope @api3/deployer cli -- --",
    "dev:api": "(cd packages/operation && yarn run dev:api)",
    "dev:api:background": "(cd packages/operation && yarn run dev:api:background)",
    "dev:background": "(cd packages/operation && yarn run dev:background)",
    "dev:delete": "(cd packages/operation && yarn run dev:delete)",
    "dev:eth-deploy": "(cd packages/operation && yarn run dev:eth-deploy)",
    "dev:eth-node": "(cd packages/operation && yarn run dev:eth-node)",
    "dev:eth-node:background": "(cd packages/operation && yarn run dev:eth-node:background)",
    "dev:eth-requests": "(cd packages/operation && yarn run dev:eth-requests)",
    "dev:invoke": "(cd packages/node && yarn run dev:invoke)",
    "dev:list": "(cd packages/operation && yarn run dev:list)",
    "dev:stop": "(cd packages/operation && yarn run dev:stop)",
    "docker": "yarn docker:artifacts && yarn docker:deployer && yarn docker:node",
    "docker:artifacts": "docker rmi --force api3/artifacts && docker build --tag api3/artifacts:latest --file docker/Dockerfile .",
    "docker:deployer": "docker build --tag api3/deployer:latest --file packages/deployer/docker/Dockerfile .",
    "docker:node": "docker build --tag api3/airnode:latest --file packages/node/docker/Dockerfile .",
    "lint": "yarn run lint:eslint && yarn run lint:solhint",
    "lint:eslint": "eslint . --ext .js,.ts",
    "lint:eslint:fix": "eslint . --ext .js,.ts --fix",
    "lint:solhint": "solhint ./**/*.sol",
    "pack": "lerna run pack --stream",
    "postinstall": "husky install",
    "prettify": "prettier --write ./**/*.{js,sol,ts} --loglevel silent",
    "pretty-quick": "pretty-quick --staged --pattern \"**/*.*(js|sol|ts)\"",
    "publish": "lerna publish",
    "test": "lerna run test --stream",
    "test:adapter": "(cd packages/adapter && yarn run test)",
    "test:adapter:watch": "(cd packages/adapter && yarn run test:watch)",
    "test:admin": "cd packages/admin && yarn run test",
    "test:admin:watch": "cd packages/admin && yarn run test:watch",
    "test:admin:watch:debug": "cd packages/admin && yarn run test:watch:debug",
    "test:airnode-abi": "(cd packages/airnode-abi && yarn run test)",
    "test:airnode-abi:watch": "(cd packages/airnode-abi && yarn run test:watch)",
    "test:e2e": "lerna run test:e2e --stream",
    "test:e2e-admin": "cd packages/admin && yarn run test:e2e",
    "test:e2e-node": "cd packages/node && yarn run test:e2e",
    "test:e2e-node:debug": "cd packages/node && yarn run test:e2e:debug",
    "test:protocol": "cd packages/protocol && yarn run test",
    "test:node": "(cd packages/node && yarn run test)",
    "test:node:watch": "cd packages/node && yarn run test:watch",
    "test:validator": "(cd packages/validator && yarn run test)"
  },
  "dependencies": {
    "ethers": "^5.4.5",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/lodash": "^4.14.165",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-functional": "^3.5.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "husky": "^6.0.0",
    "jest": "^26.4.2",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "pretty-quick": "^3.0.2",
    "rimraf": "^3.0.2",
    "solhint": "^3.2.0",
    "ts-jest": "^26.3.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  }
}
