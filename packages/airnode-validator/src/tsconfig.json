  "references": [
    { "path": "./tsconfig.cjs.json" },
    { "path": "./tsconfig.es6.json" },
    { "path": "./tsconfig.esm.json" }
  ],
  "include": ["./**/*.ts", "../bin/**/*.ts", "../package.json"],
  "exclude": ["./**/*.test.ts"]
}
