{
  "name": "@api3/deployer",
  "license": "MIT",
  "version": "0.1.0",
  "bin": {
    "deployer": "./dist/bin/deployer.js"
  },
  "main": "./dist/bin/deployer.js",
  "scripts": {
    "build": "yarn clean && yarn compile && yarn webpack && yarn copy:webpack && yarn copy:terraform",
    "clean": "rimraf -rf ./dist",
    "cli": "ts-node bin/deployer.ts",
    "compile": "tsc -p tsconfig.build.json",
    "copy:terraform": "copyfiles terraform/**/**/*.tf dist/",
    "copy:webpack": "copyfiles .webpack/**/**/*.js dist/",
    "prepublishOnly": "yarn build",
    "webpack": "webpack",
    "webpack:dev": "webpack --mode development"
  },
  "dependencies": {
    "@api3/node": "^0.1.0",
    "@api3/ois": "^0.1.0",
    "@api3/protocol": "^0.1.0",
    "dotenv": "^10.0.0",
    "ethers": "^5.4.4",
    "lodash": "^4.17.21",
    "ora": "^5.1.0",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.169",
    "@types/node": "^15.12.2",
    "@types/yargs": "^17.0.2",
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "yargs": "^17.0.1"
  }
}
