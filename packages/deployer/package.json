{
  "name": "@airnode/deployer",
  "license": "MIT",
  "version": "0.1.0",
  "scripts": {
    "_build": "yarn run clean && yarn run compile",
    "clean": "rimraf -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "command:help": "node dist/deployer-cli.js --help",
    "command:deploy": "node dist/deployer-cli.js -o $OUTPUT_FILENAME deploy",
    "command:deploy:nonstop": "node dist/deployer-cli.js deploy -o $OUTPUT_FILENAME --nonStop",
    "command:remove-with-receipt": "node dist/deployer-cli.js remove-with-receipt --rf $RECEIPT_FILENAME",
    "command:remove": "node dist/deployer-cli.js remove -a $AIRNODE_ID_SHORT -s $STAGE -c aws -r $REGION",
    "sls:config": "sls config credentials --provider aws --key $AWS_ACCESS_KEY_ID --secret $AWS_SECRET_KEY",
    "sls:deploy": "yarn run webpack:copy-config && sls deploy --config serverless.aws.yml --airnodeIdShort $AIRNODE_ID_SHORT --region $REGION --stage $STAGE",
    "sls:remove": "sls remove --config serverless.aws.yml --airnodeIdShort $AIRNODE_ID_SHORT --region $REGION --stage $STAGE",
    "sls:invoke": "sls invoke --function startCoordinator --config serverless.aws.yml --airnodeIdShort $AIRNODE_ID_SHORT --region $REGION --stage $STAGE",
    "webpack": "webpack",
    "webpack:copy-config": "mkdir -p .webpack/config-data && cp src/config-data/config.json .webpack/config-data/config.json"
  },
  "dependencies": {
    "@airnode/node": "^0.1.0",
    "@airnode/protocol": "^0.1.0",
    "dotenv": "^8.2.0",
    "ora": "^5.1.0",
    "serverless": "^2.35.0",
    "webpack": "^5.31.2",
    "webpack-cli": "^4.6.0"
  }
}
