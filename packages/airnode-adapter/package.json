    "test": "yarn test:ts && yarn test:hardhat",
    "test:ts": "SILENCE_LOGGER=true jest --coverage",
    "test:hardhat": "hardhat test",
    "test:watch": "yarn test:ts --watch"
  },
  "dependencies": {
    "@api3/ois": "1.2.0",
    "@api3/promise-utils": "^0.3.0",
