  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@types/lodash": "^4.14.185",
    "@types/mocha": "^10.0.0",
    "chai": "^4.3.6",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "2.9.9",
    "jest": "^29.0.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.2",
    "typescript": "^4.8.3"
  }
